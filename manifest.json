{
  "manifest_version": 2,

  "name": "Sai biscoito",
  "description": "Make Twitter Great Again.",
  "author": "Ricardo Serathiuk (@rsrthk)",
  "version": "0.7",

  "permissions": [
    "storage"
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },

  "content_scripts": [
      {
        "matches": ["*://*.twitter.com/*", "*://twitter.com/*"],
        "js": ["arrive.min.js", "script.js"]
      }
    ]
}
